1)
#include <iostream>
#include <string>
using namespace std;
class Pessoa {
private:
    string nome;
    int idade;
public:
    void setNome(const string& n) {
        nome = n;
    }
    string getNome() const {
        return nome;
    }
    void setIdade(int i) {
        idade = i;
    }
    int getIdade() const {
        return idade;
    }
};
int main() {
    Pessoa pessoa;
    pessoa.setNome("Gabriel");
    pessoa.setIdade(19);
    cout << "Nome: " << pessoa.getNome() << endl;
    cout << "Idade: " << pessoa.getIdade() << endl;
    return 0;
}

